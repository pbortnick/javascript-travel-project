<h1>Welcome To The Travel App</h1>


<% @destinations.each do |destination| %>
  <li><%= link_to "#{destination.location}", destination %>
    <button class="dest-index-more" data-id="<%=destination.id%>">More Info</button>

    <div id="more-<%= destination.id %>">
    </div>

    <br>

    <% if current_user %>
      <%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </li><br>
<% end %>

<style type="text/css">
  div#least {
    display:none;
  }
</style>

<div id="least">
  <div id="least-price">
    <%= @destination.price %>
  </div>
  <div id="least-location">
    <%= @destination.location %>
  </div>
</div>

<br></br>

<h3>Most expensive trip: </h3><%= most_expensive %>

<br></br>

<h3 id="least_expensive">Least expensive trip: </h3><%= least_expensive %>

<br></br>

<%= link_to "See all Travel Agents", agents_path %>

<br></br>

