<%= form_for(@destination, :url => agent_destinations_path(@agent), :html => {:id => "destination-form"} ) do |f|  %>
   <p>
     <%= f.label :location%>
     <%= f.text_field :location%>
   </p>

   <p>
     <%= f.label :price %>
     <%= f.text_field :price %>
   </p>

   <p>
     <%= f.label :trip_length_in_days %>
     <%= f.text_field :trip_length %>
   </p>

   <p>
     <%= f.label :weather_conditions %>
     <%= f.text_field :weather %>
   </p>

   <%= f.submit %>
 <% end %>
