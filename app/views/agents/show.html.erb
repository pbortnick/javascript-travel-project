<h1 class="agentName"><%= @agent.full_name %></h1>
<br>

<a href="#" class="load" data-id="<%=@agent.id%>">Load Destinations And Add New</a>


<div class="destinations">
  <ol>
  </ol>
</div>

<p>Add New Destination for <%=@agent.first_name%>:</p>

<div class="new_destination_agent" style="display:none">
<%= form_for([@agent, @destination]) do |f|%>
   <p>
     <%= f.label :location%>
     <%= f.text_field :location%>
   </p>

   <p>
     <%= f.label :price %>
     <%= f.text_field :price %>
   </p>

   <p>
     <%= f.label :trip_length_in_days %>
     <%= f.text_field :trip_length %>
   </p>

   <p>
     <%= f.label :weather_conditions %>
     <%= f.text_field :weather %>
   </p>

   <%= f.submit :id=> "a-d-submit" %>
<% end %>
</div>

<br>

